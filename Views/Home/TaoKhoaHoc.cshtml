@model QuanLyTrungTamDaoTao.Models.KhoaHoc
@{
    ViewData["Title"] = "Tạo Khóa Học";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="create-course-container">
        <h2 class="form-title">Tạo Khóa Học Mới</h2>
        <hr />
        <form method="post" asp-action="TaoKhoaHoc" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-6 form-group">
                    <label asp-for="MaKhoaHoc" class="form-label">Mã Khóa Học</label>
                    <input asp-for="MaKhoaHoc" class="form-control" name="MaKhoaHoc" readonly />
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="GiangVien" class="form-label">Giảng Viên</label>
                    <select asp-for="GiangVien" class="form-control" name="GiangVien">
                        <option value="">-- Chọn Giảng Viên --</option>
                    </select>
                    <span asp-validation-for="GiangVien" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 form-group">
                    <label asp-for="ThoiGianKhaiGiang" class="form-label">Thời Gian Khai Giảng</label>
                    <input asp-for="ThoiGianKhaiGiang" class="form-control" type="date" name="ThoiGianKhaiGiang" />
                    <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="HocPhi" class="form-label">Học Phí</label>
                    <input asp-for="HocPhi" class="form-control" type="number" name="HocPhi" />
                    <span asp-validation-for="HocPhi" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 form-group">
                    <label asp-for="SoLuongHocVienToiDa" class="form-label">Số Lượng Học Viên Tối Đa</label>
                    <input asp-for="SoLuongHocVienToiDa" class="form-control" type="number" name="SoLuongHocVienToiDa" />
                    <span asp-validation-for="SoLuongHocVienToiDa" class="text-danger"></span>
                </div>
            </div>

            @Html.AntiForgeryToken()
            <div class="form-group d-flex justify-content-end gap-3 mt-4">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>