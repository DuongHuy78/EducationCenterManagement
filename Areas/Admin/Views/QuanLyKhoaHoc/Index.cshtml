@model IEnumerable<QuanLyTrungTamDaoTao.Models.KhoaHoc>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm mb-4" style="background-color: #f8f9fa;">
            <div class="card-body text-center py-4">
                <h1 class="display-6 fw-bold mb-0">Quan ly khoa hoc</h1>
            </div>
        </div>
    </div>
</div>

<div class="wrapping">
    <div class="table-responsive">
        <div class=" d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-lg-start">Danh sách khóa học</h2>
            <a asp-area="Admin" asp-controller="QuanLyKhoaHoc" asp-action="Create" class="btn btn-secondary create-btn">
                <i class="fa-solid fa-plus"></i> Tạo khóa học</a>
        </div>
        <table class="table table-bordered table-hover event-table shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Mã</th>
                    <th>Tên khóa học</th>
                    <th>Giảng viên</th>
                    <th>Thời gian khai giảng</th>
                    <th>Học phí</th>
                    <th>Số lượng sinh viên tối đa</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @if (Model == null)
            {
                <p>Không có khóa học nào.</p>
            }
            else
            {
                <tbody>

                    @foreach (var khoaHoc in Model)
                    {
                        <tr>
                            <td>@khoaHoc.MaKhoaHoc</td>
                            <td>@khoaHoc.TenKhoaHoc</td>
                            <td>@khoaHoc.GiangVien</td>
                            <td>@khoaHoc.ThoiGianKhaiGiang</td>
                            <td>@khoaHoc.HocPhi</td>
                            <td>@khoaHoc.SoLuongHocVienToiDa</td>
                            <td class="action_btn">
                                <a asp-action="Edit" asp-route-id="@khoaHoc.MaKhoaHoc" class="btn btn-success btn-sm action-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@khoaHoc.MaKhoaHoc" class="btn btn-danger btn-sm action-btn" title="Xóa">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenKhoaHoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiangVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThoiGianKhaiGiang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HocPhi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongHocVienToiDa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhoaHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianKhaiGiang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HocPhi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongHocVienToiDa)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MaKhoaHoc" class="class=" btn btn-success btn-sm action-btn"">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKhoaHoc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaKhoaHoc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/js/approvalEvent.js"></script>
