@model QuanLyTrungTamDaoTao.Models.KhoaHoc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Phần tiêu đề -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4" style="background-color: #f8f9fa;">
                <div class="card-body text-center py-4">
                    <h1 class="display-6 fw-bold mb-0">Chỉnh sửa khóa học</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="mb-3">
                                <label asp-for="MaKhoaHoc" class="form-label"></label>
                                <input asp-for="MaKhoaHoc" class="form-control" value="@ViewBag.NewKhoaHocId" readonly />
                            </div>
                            <div class="mb-3">
                                <label asp-for="TenKhoaHoc" class="form-label"></label>
                                <input asp-for="TenKhoaHoc" class="form-control" />
                                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="GiangVien" class="form-label"></label>
                                <input asp-for="GiangVien" class="form-control" />
                                <span asp-validation-for="GiangVien" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ThoiGianKhaiGiang" class="form-label"></label>
                                <input asp-for="ThoiGianKhaiGiang" class="form-control" type="date" />
                                <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="HocPhi" class="form-label"></label>
                                <input asp-for="HocPhi" class="form-control" type="number" min="0" step="0.01" />
                                <span asp-validation-for="HocPhi" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SoLuongHocVienToiDa" class="form-label"></label>
                                <input asp-for="SoLuongHocVienToiDa" class="form-control" type="number" min="1" />
                                <span asp-validation-for="SoLuongHocVienToiDa" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-action="Index" class="text-decoration-none"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhoaHoc" />
            <div class="form-group">
                <label asp-for="TenKhoaHoc" class="control-label"></label>
                <input asp-for="TenKhoaHoc" class="form-control" />
                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiangVien" class="control-label"></label>
                <input asp-for="GiangVien" class="form-control" />
                <span asp-validation-for="GiangVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianKhaiGiang" class="control-label"></label>
                <input asp-for="ThoiGianKhaiGiang" class="form-control" />
                <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HocPhi" class="control-label"></label>
                <input asp-for="HocPhi" class="form-control" />
                <span asp-validation-for="HocPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongHocVienToiDa" class="control-label"></label>
                <input asp-for="SoLuongHocVienToiDa" class="form-control" />
                <span asp-validation-for="SoLuongHocVienToiDa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

