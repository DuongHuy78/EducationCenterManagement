@model QuanLyTrungTamDaoTao.Models.KhoaHoc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container-fluid px-4">
    <!-- Phần tiêu đề -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4" style="background-color: #f8f9fa;">
                <div class="card-body text-center py-4">
                    <h1 class="display-6 fw-bold mb-0">Chỉnh sửa khóa học</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="mb-3">
                                <label asp-for="MaKhoaHoc" class="form-label">Mã Khóa Học</label>
                                <input asp-for="MaKhoaHoc" class="form-control" readonly />
                                <small class="text-muted">Mã khóa học không thể thay đổi</small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TenKhoaHoc" class="form-label">Tên Khóa Học</label>
                                <input asp-for="TenKhoaHoc" class="form-control" />
                                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="GiangVien" class="form-label">Giảng Viên</label>
                                <input asp-for="GiangVien" class="form-control" />
                                <span asp-validation-for="GiangVien" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ThoiGianKhaiGiang" class="form-label">Thời Gian Khai Giảng</label>
                                <input asp-for="ThoiGianKhaiGiang" class="form-control" type="date" />
                                <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ThoiGianKetThuc" class="form-label">Thời Gian Kết Thúc</label>
                                <input asp-for="ThoiGianKetThuc" class="form-control" type="date" />
                                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="HocPhi" class="form-label">Học Phí</label>
                                <input asp-for="HocPhi" class="form-control" type="number" min="0" step="0.01" />
                                <span asp-validation-for="HocPhi" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SoLuongHocVienToiDa" class="form-label">Số Lượng Học Viên Tối Đa</label>
                                <input asp-for="SoLuongHocVienToiDa" class="form-control" type="number" min="1" />
                                <span asp-validation-for="SoLuongHocVienToiDa" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



