@model IEnumerable<QuanLyTrungTamDaoTao.Models.DangKyKhoaHoc>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="container-fluid px-4">
    <!-- Phần tiêu đề -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4" style="background-color: #f8f9fa;">
                <div class="card-body text-center py-4">
                    <h1 class="display-6 fw-bold mb-0">Dashboard</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần Thống kê -->
    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card text-white bg-success shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-white-75 small text-uppercase">Tổng số Khóa học</div>
                        <div class="fs-4 fw-bold">@ViewBag.totalKhoaHoc</div>
                    </div>
                    <i class="bi bi-journal-bookmark-fill fs-1 opacity-50"></i>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small">
                    <a class="text-white stretched-link" asp-area="Admin" asp-controller="KhoaHoc" asp-action="Index">Xem chi tiết</a>
                    <div class="text-white"><i class="bi bi-chevron-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card text-white bg-primary shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-white-75 small text-uppercase">Tổng số Học viên</div>
                        <div class="fs-4 fw-bold">@ViewBag.totalHocVien</div>
                    </div>
                    <i class="bi bi-people-fill fs-1 opacity-50"></i>
                </div>
                 <div class="card-footer d-flex align-items-center justify-content-between small">
                    <a class="text-white stretched-link" asp-area="Admin" asp-controller="HocVien" asp-action="Index">Xem chi tiết</a>
                    <div class="text-white"><i class="bi bi-chevron-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card text-white bg-warning shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-white-75 small text-uppercase">Tổng Doanh thu</div>
                        @* Định dạng tiền tệ @string.Format("{0:N0} VND", ViewBag.DoanhThu)*@
                        <div class="fs-4 fw-bold">@ViewBag.totalDoanhThu VND</div>
                    </div>
                    <i class="bi bi-cash-coin fs-1 opacity-50"></i>
                </div>
                 <div class="card-footer d-flex align-items-center justify-content-between small">
                    <a class="text-white stretched-link" asp-area="Admin" asp-controller="ThanhToan" asp-action="Index">Xem chi tiết</a>
                    <div class="text-white"><i class="bi bi-chevron-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Số lượng đăng ký trong 6 tháng gần nhất</h4>
                <div class="chart-container">
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>

<script>
    const Events = @Html.Raw(Json.Serialize(ViewBag.EventsByYear)); // Sử dụng mảng từ ViewBag
    const countDangKyByMonth = @Html.Raw(Json.Serialize(ViewBag.dangKyTrong6Thang))
    const currentMonth = new Date().getMonth() + 1; // Tháng hiện tại (1-based)
    const months = [];
    for (let i = 5; i >= 0; i--) {
        let month = currentMonth - i;
        if (month <= 0) {
            month += 12; // Quay lại tháng 12 nếu giá trị âm
        }
        months.push(month);
    }

    console.log(months);
    const ctx = document.getElementById("barChart").getContext("2d");
    new Chart(ctx, {
      type: "bar",
      data: {
        labels: months,
        datasets: [
          //Number of dang ky
          {
            label: "",
            data: countDangKyByMonth,
            backgroundColor: "rgba(255, 99, 132, 0.3)",
            borderColor: "rgba(255, 99, 132, 1)",

            borderWidth: 1,
          },
        ],
      },
      options: {
        responsive: true,
        legend: {
          display: false,
        },
        scales: {
          xAxes: [{
            scaleLabel: {
              display: true,
              labelString: 'Year',
              fontColor: '#6c7293',
              fontSize: 12,
              fontStyle: 'bold'
            },
            gridLines: {
              display: true,
              color: 'rgba(204, 204, 204, 0.1)'
            }
          }],

          yAxes: [{
            scaleLabel: {
              display: true,
              labelString: 'Events',
              fontColor: '#6c7293',
              fontSize: 12,
              fontStyle: 'bold'
            },
            gridLines: {
              display: true,
              color: 'rgba(204, 204, 204, 0.1)'
            },

            ticks: {
              beginAtZero: true,
              min: 0,
            }
          }]
        },
      },
    });
</script>
